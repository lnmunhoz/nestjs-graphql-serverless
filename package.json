{
  "name": "nestjs-graphql-serverless",
  "private": true,
  "version": "1.0.0",
  "description": "NestJS GraphQL API example using serverless framework",
  "license": "MIT",
  "scripts": {
    "build": "rimraf dist && tsc -p tsconfig.build.json && npm run copyfiles",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "ts-node -r tsconfig-paths/register src/main.ts",
    "start:dev": "tsc-watch -p tsconfig.build.json --onSuccess \"node dist/main.js\"",
    "start:sls": "tsc-watch -p tsconfig.build.json --onSuccess \"sls offline\"",
    "start:debug": "tsc-watch -p tsconfig.build.json --onSuccess \"node --inspect-brk dist/main.js\"",
    "start:prod": "node dist/main.js",
    "copyfiles": "cp src/schema.gql dist/schema.gql",
    "postbuild": "npm run copyfiles",
    "deploy:sls": "npm run build && sls deploy",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@nestjs/common": "^6.0.4",
    "@nestjs/core": "^6.0.4",
    "@nestjs/graphql": "^6.4.2",
    "@nestjs/microservices": "^6.0.4",
    "@nestjs/platform-express": "^6.5.3",
    "@nestjs/websockets": "^6.0.4",
    "apollo-server-express": "^2.14.2",
    "aws-lambda": "^1.0.5",
    "aws-serverless-express": "^3.3.6",
    "express": "^4.17.1",
    "graphql": "^14.4.2",
    "graphql-tools": "^4.0.5",
    "reflect-metadata": "0.1.13",
    "rimraf": "2.6.3",
    "rxjs": "6.5.2",
    "type-graphql": "^0.17.4"
  },
  "devDependencies": {
    "@nestjs/testing": "6.5.3",
    "@types/aws-lambda": "^8.10.31",
    "@types/express": "4.17.0",
    "@types/jest": "24.0.15",
    "@types/node": "12.6.8",
    "@types/supertest": "2.0.8",
    "jest": "24.8.0",
    "prettier": "1.18.2",
    "serverless": "^1.48.4",
    "serverless-offline": "^5.8.0",
    "supertest": "4.0.2",
    "ts-jest": "24.0.2",
    "ts-node": "8.3.0",
    "tsc-watch": "2.2.1",
    "tsconfig-paths": "3.8.0",
    "tslint": "5.18.0",
    "typescript": "3.5.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
